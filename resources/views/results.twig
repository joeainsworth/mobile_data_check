{% extends 'templates/app.twig' %}

{% block content %}
	<h1>Results</h1>
	<table class="table table-striped table-hover ">
		<thead>
			<tr>
				<th>File</th>
				<th>Date</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for contactList in contactLists %}
				<tr>
					<td><a href="uploads/{{ contactList.fileName }}" class="no-decoration" title="Download {{ contactList.fileName }}">
						{{ contactList.fileName }}</a></td>
					<td>{{ contactList.created_at }}</td>
					<td><a href="{{ path_for('viewResults', {'id': contactList.id}) }}" title="View results"><i class="fa fa-eye" aria-hidden="true"></i></a></td>
					<td><a href="{{ path_for('downloadResults', {'id': contactList.id}) }}" title="Download results"><i class="fa fa-download" aria-hidden="true"></i></td>
				</tr>

			{% endfor %}
		</tbody>
	</table>
{% endblock %}