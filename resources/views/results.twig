{% extends 'templates/app.twig' %}

{% block content %}
	<h1>Results</h1>
	<table class="table table-striped table-hover ">
		<thead>
			<tr>
				<th>File</th>
				<th>Date</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for upload in uploads %}
				<tr>
					<td><a href="uploads/{{ upload.fileName }}" class="no-decoration" title="Download {{ upload.fileName }}">{{ upload.fileName }}</a></td>
					<td>{{ upload.created_at }}</td>
					<td><a href="{{ path_for('viewResults', {'id': upload.id}) }}" title="View results"><i class="fa fa-eye" aria-hidden="true"></i></a></td>
					<td><i class="fa fa-download" aria-hidden="true"></i></td>
				</tr>

			{% endfor %}
		</tbody>
	</table>
{% endblock %}